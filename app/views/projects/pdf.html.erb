<div>

  <h1 style="color: orange;">HAKUNA</h1>
  <div>
    <h2>Project: <%= @project.name %></h2>
    <p>Client: <%= @project.client %></p>
  </div>

  <div>
      <table class="table table-hover">
        <thead>
          <tr class="bottom-border">
            <th scope="col" style="width: 100px">#</th>
            <th scope="col" style="width: 100px">DATE</th>
            <th scope="col" style="width: 100px">NOTES</th>
            <th scope="col" style="width: 100px">TIME LAPSED</th>
          </tr>
        </thead>
        <tbody>
        <% @logs.each do |log| %>
          <tr>
            <th scope="row"> <%= @counter %></th>
            <td><%= log.start_time.strftime("%F") %></td>
            <td><%= log.description %></td>
            <td><%= Time.at(log.duration).utc.strftime('%H hr : %M m') %></td>
          </tr>
          <% @counter += 1 %>
        <% end %>
        </tbody>
      </table>
    <p>Total ($) = <%= @project.cost %></p>
  </div>
  <%= wicked_pdf_image_tag @image_meme, style: "width: 400px; height: 300px;" %>
  <%= wicked_pdf_image_tag @logo_url %>
</div>
