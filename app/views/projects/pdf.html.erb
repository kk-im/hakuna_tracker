<head>
  <style>
    .back{
      background-color: rgb(206, 58, 0);
      padding: 8px;
      width: 200px;
      color: white;
      text-align: left;
    }

    .text-pdf{
      color: rgb(206, 58, 0);
      text-align: right;
    }

    .flexbox{
      display: flex;
      justify-content: space-between;
    }

    .table{
      padding: 50px 24px;
    }

  </style>
</head>


</div>
  <div class="flexbox">
    <%= wicked_pdf_image_tag @logo_url %>
    <h2 class="text-pdf">Invoice</h2>
  <div>
  <div class="flexbox">
    <div>
      <p> <%= @project.name %></p>
      <p><%= @project.user.email %></p>
    </div>
    <div>
    <p class="back">Billed to</p>
    <p><%= @project.email %></p>
    <p>Client: <%= @project.client %></p>
    </div>
    <%= wicked_pdf_image_tag @image_meme, style: "width: 400px; height: 300px;" %>
  </div>
  <div>
      <table class="table table-hover">
        <thead>
          <tr class="bottom-border">
            <th scope="col" style="width: 100px">#</th>
            <th scope="col" style="width: 100px">DATE</th>
            <th scope="col" style="width: 100px">NOTES</th>
            <th scope="col" style="width: 100px">TIME LAPSED</th>
          </tr>
        </thead>
        <tbody>
          <% @logs.each_with_index do |log, index| %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= log.start_time.strftime("%d %B %Y") %></td>
              <td><%= log.description %></td>
              <td><%= Time.at(log.duration).utc.strftime('%H hr : %M m : %S s') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <p>Total ($) = <%= @total_cost.round(2) %></p>
  </div>
</div>
