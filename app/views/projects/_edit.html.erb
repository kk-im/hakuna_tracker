<!-- Button trigger modal -->
<div class="edit-modal">
  <button type="button" data-toggle="modal" class="edit-modal-button" data-target="#editModalCenter<%=project.id%>">
    Edit
  </button>
</div>
<!-- Modal -->

<div class="modal fade" id="editModalCenter<%=project.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content modal-content-new">
      <div class="modal-header modal-head" id="modal-head-edit">
        <div class="edit-modal-headings">
​          <h4>A Change Of Plans.</h4>
​          <h5>Edit an existing project</h5>
​        </div>
​        <button type="button" class="edit-close-button" data-dismiss="modal" aria-label="Close">
​          <span aria-hidden="true">&times;</span>
​        </button>
​      </div>
      <div class="modal-body" id="modal-body-edit">
​        <%= simple_form_for(project, url: project_path(project, return_to: request.fullpath.split("#").first)) do |f| %>
​          <%= f.input :name, :placeholder => "Project Name"  %>
​          <%= f.input :client, :placeholder => 'Client *' %>
​          <%= f.input :expected_time, :placeholder => "Estimated Time (Hours)", html5: true, input_html: { min: 1 }  %>
​          <%= f.input :deadline, html5: true %>
​          <%= f.input :rate, :placeholder => "Hourly Rate" %>
​          <%= f.input :email, :placeholder => "Client email" %>
          <div class="modal-footer modal-footer-new">
​            <%= f.submit "Save", class: "modal-button" %>
​          </div>
​        <% end %>
      </div>
​    </div>
  </div>
</div>
