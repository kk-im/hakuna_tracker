<div class="main main-signed-in">

  <div class="show-projects-header">
    <h1 class="page-title"><%= params[:client] %>'s projects</h1>
  </div>

  <div class="project-headers grid client-grid">
    <p>Project Name</p>
    <p>Deadline</p>
    <p></p>
    <p></p>
    <p>Track</p>
  </div>

  <% @projects_of_client.each do |project| %>
      <div class="project-item grid client-grid">
        <div><p class="margin-auto"><%= link_to project.name, project_path(project) %></p></div>
        <div><p class="grey-text margin-auto"><%= project.deadline %></p></div>
        <div class="projects-edit-btn"><p><%= render 'projects/edit', project: project %></div>
        <div class="projects-delete-btn"><p><%= link_to "Delete", project_path(project), method: 'delete' %></p></div>
        <div class="center"><i class="fas fa-caret-right fa-2x btn-play"></i></div>
      </div>
  <% end %>
</div>
