<div class="main">
  <%= link_to root_path do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="60" height="15" style="transform: scale(2.5)" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/></svg>
  <% end %>
  <div class="container pt-5">
  <h2 class="section-title">Forgot your password?</h2>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label:false,
                    placeholder: 'Email'
                    %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", class: "btn-login" %>
      </div>
    <% end %>

    <div class="py-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
